    string homeController = "Home";
    string topDealsController = "TopDeals";

    string normalHeaderCSSClass = "header";
    string activeHeaderCSSClass = "activeTab";
    string appliedCSSClass = normalHeaderCSSClass;
}


@if (currentControllerName == homeController)
{ appliedCSSClass = activeHeaderCSSClass; }
else
{ appliedCSSClass = normalHeaderCSSClass; }

@Html.ActionLink("Search The Deals", "Index", "Home", null, new { @class = appliedCSSClass })


